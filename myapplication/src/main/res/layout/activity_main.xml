<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.chennemann.myapplication.MainActivity"
        >

    <Button
            android:id="@+id/startActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Failing Activity"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

    <Button
            android:id="@+id/startNestedScrollViewActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start NestedScroll Failing Activity"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/startActivityButton"
            android:layout_centerHorizontal="true"
            />

</RelativeLayout>
